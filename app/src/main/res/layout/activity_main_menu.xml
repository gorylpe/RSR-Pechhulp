<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="piotr.rsrpechhulp.activities.MainMenuActivity">

    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@drawable/btn_bg">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/main_menu_actionbar_title"
                style="@style/ActionBarTextView"/>
        <Button
                android:id="@+id/btn_info"
                android:layout_width="@dimen/info_icon_size"
                android:layout_height="@dimen/info_icon_size"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/main_btn_info"
                android:onClick="buttonInfoClick"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/main_menu_background"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/main_bg"/>

    <Button
            android:id="@+id/button_go_to_map"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/main_btn_warning"
            android:text="@string/go_to_map_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentBottom="true"
            style="@style/DefaultButton"/>

</RelativeLayout>
