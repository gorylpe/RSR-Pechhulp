<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/popup_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/address_window_width"
            android:layout_height="wrap_content">
        <TextView
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_address_title"
                style="@style/PopupTitleTextAppearance"/>
        <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/address_text_vertical_margin"
                android:text="@string/popup_address_obtaining"
                style="@style/PopupTextAppearance"/>
        <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/address_text_vertical_margin"
                android:text="@string/popup_address_info"
                style="@style/PopupTextAppearance"/>
    </LinearLayout>
</RelativeLayout>