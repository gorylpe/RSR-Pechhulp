<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="piotr.rsrpechhulp.activities.MapsActivity">

    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_actionbar"
            style="@style/ActionBar">
        <Button
                android:id="@+id/button_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/menu_arrow"
                android:text="@string/maps_back_button_actionbar_title"
                android:onClick="buttonBackClick"
                style="@style/ActionBarButtonBack"/>
    </RelativeLayout>

    <fragment
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/toolbar"
              map:uiZoomControls="false"
              map:uiCompass="false"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
            android:id="@+id/call_panel_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="@color/popup_underlying_background">
        <RelativeLayout
                android:id="@+id/call_panel"
                android:layout_width="@dimen/call_panel_width"
                android:layout_height="@dimen/call_panel_height"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/horizontal_line_height"
                android:background="@color/popup_background">
            <TextView
                    android:id="@+id/cost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:gravity="center_horizontal"
                    android:text="@string/popup_call_cost_title"
                    style="@style/PopupTitleTextAppearance"/>
            <Button
                    android:id="@+id/button_dial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/main_btn_phone"
                    android:layout_alignParentBottom="true"
                    android:text="@string/popup_button_call_now"
                    android:onClick="buttonDialClick"
                    style="@style/DefaultButton"/>
            <TextView
                    android:id="@+id/cost_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/button_dial"
                    android:layout_below="@id/cost_title"
                    android:gravity="center"
                    android:text="@string/popup_call_cost_text"
                    style="@style/PopupTextAppearance"/>
        </RelativeLayout>
        <Button
                android:id="@+id/button_close_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/call_panel"
                android:layout_alignStart="@id/call_panel"
                android:text="@string/popup_button_cancel"
                android:onClick="buttonPanelCloseClick"
                style="@style/ButtonPanelClose"/>
    </RelativeLayout>
    <Button
            android:id="@+id/button_call_now"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentBottom="true"
            android:drawableStart="@drawable/main_btn_tel"
            android:text="@string/popup_button_call_rsr_now"
            android:onClick="buttonCallNowClick"
            style="@style/DefaultButton"/>

    <ImageView
            android:id="@+id/location_obtaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_mini"
            android:layout_centerInParent="true"/>
</RelativeLayout>
