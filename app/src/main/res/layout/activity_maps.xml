<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="piotr.rsrpechhulp.activities.MapsActivity">

    <RelativeLayout
            android:id="@+id/rl_maps_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_actionbar"
            style="@style/ActionBar">
        <Button
                android:id="@+id/btn_maps_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/menu_arrow"
                android:text="@string/maps_btn_back_actionbar_title"
                android:onClick="btnBackClick"
                style="@style/ActionBarButtonBack"/>
    </RelativeLayout>

    <fragment
              android:id="@+id/map_maps"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/rl_maps_toolbar"
              map:uiZoomControls="false"
              map:uiCompass="false"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
            android:id="@+id/rl_maps_call_popup_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_maps_toolbar"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="@color/black_66">
        <RelativeLayout
                android:id="@+id/rl_maps_call_popup"
                android:layout_width="@dimen/width_call_popup"
                android:layout_height="@dimen/height_call_popup"
                android:layout_marginBottom="@dimen/margin_vertical_all"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/height_horizontal_line"
                android:background="@color/rio_grande_67">
            <TextView
                    android:id="@+id/txv_maps_cost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/margin_vertical_all"
                    android:gravity="center_horizontal"
                    android:text="@string/popup_call_cost_title"
                    style="@style/TextAppearancePopupTitle"/>
            <Button
                    android:id="@+id/btn_maps_dial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/main_btn_phone"
                    android:layout_alignParentBottom="true"
                    android:text="@string/popup_btn_call_now"
                    android:onClick="btnDialClick"
                    style="@style/ButtonDefault"/>
            <TextView
                    android:id="@+id/txv_maps_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btn_maps_dial"
                    android:layout_below="@id/txv_maps_cost_title"
                    android:gravity="center"
                    android:text="@string/popup_call_cost_content"
                    style="@style/TextAppearancePopup"/>
        </RelativeLayout>
        <Button
                android:id="@+id/btn_maps_popup_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/rl_maps_call_popup"
                android:layout_alignStart="@id/rl_maps_call_popup"
                android:text="@string/all_cancel"
                android:onClick="btnPopupCloseClick"
                style="@style/ButtonPopupClose"/>
    </RelativeLayout>
    <Button
            android:id="@+id/btn_maps_call_now"
            android:layout_width="@dimen/width_btn"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_vertical_all"
            android:layout_alignParentBottom="true"
            android:drawableStart="@drawable/main_btn_tel"
            android:text="@string/popup_btn_call_rsr_now"
            android:onClick="btnCallNowClick"
            style="@style/ButtonDefault"/>

    <ImageView
            android:id="@+id/imv_maps_location_obtaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_mini"
            android:layout_centerInParent="true"/>
</RelativeLayout>
