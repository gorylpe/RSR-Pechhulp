<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="piotr.rsrpechhulp.activities.MapsActivity">

    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            style="@style/ActionBar">
        <Button
                android:id="@+id/button_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/menu_arrow"
                android:text="@string/maps_back_button_actionbar_title"
                android:onClick="buttonBackClick"
                style="@style/ActionBarButtonBack"/>
    </RelativeLayout>

    <fragment
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/toolbar"
              map:uiZoomControls="false"
              map:uiCompass="false"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
            android:id="@+id/call_panel_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/call_panel_height"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_panel_tablet_background">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                    android:id="@+id/cost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/call_cost_title_tablet"
                    style="@style/PopupTitleTextAppearance"/>
            <Button
                    android:id="@+id/button_dial"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/main_btn_phone"
                    android:text="@string/phone_text"
                    android:onClick="buttonDialClick"
                    android:background="@null"/>
            <TextView
                    android:id="@+id/cost_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/call_cost_text"
                    style="@style/PopupTextAppearance"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
            android:id="@+id/location_obtaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_mini"
            android:layout_centerInParent="true"/>
</RelativeLayout>
