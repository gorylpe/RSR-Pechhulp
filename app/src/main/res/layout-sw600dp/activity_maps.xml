<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="piotr.rsrpechhulp.activities.MapsActivity">

    <RelativeLayout
            android:id="@+id/rl_maps_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_actionbar"
            style="@style/ActionBar">
        <Button
                android:id="@+id/btn_maps_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/menu_arrow"
                android:text="@string/maps_btn_back_actionbar_title"
                android:onClick="btnBackClick"
                style="@style/ActionBarButtonBack"/>
    </RelativeLayout>

    <fragment
              android:id="@+id/map_maps"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/rl_maps_toolbar"
              map:uiZoomControls="false"
              map:uiCompass="false"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
            android:id="@+id/rl_maps_call_popup_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_call_popup"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/bondi_blue_67">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                    android:id="@+id/txv_maps_cost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/popup_call_cost_title_tablet"
                    style="@style/TextAppearancePopupTitle"/>
            <Button
                    android:id="@+id/btn_maps_dial"
                    android:layout_width="@dimen/width_btn"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/main_btn_phone"
                    android:text="@string/popup_phone_content"
                    android:onClick="btnDialClick"
                    android:background="@null"/>
            <TextView
                    android:id="@+id/txv_maps_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/popup_call_cost_content"
                    style="@style/TextAppearancePopup"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
            android:id="@+id/imv_maps_location_obtaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_mini"
            android:layout_centerInParent="true"/>
</RelativeLayout>
