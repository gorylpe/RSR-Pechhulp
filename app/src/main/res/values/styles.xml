<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">@dimen/textsize_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/main_btn_bg</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal_btn</item>
        <item name="android:paddingRight">@dimen/padding_horizontal_btn</item>
        <item name="android:minHeight">@dimen/height_btn_min</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="ActionBarTextView">
        <item name="android:textSize">@dimen/textsize_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarButtonBack" parent="ButtonDefault">
        <item name="android:paddingLeft">@dimen/margin_horizontal_all</item>
        <item name="android:paddingRight">@dimen/margin_horizontal_all</item>
        <item name="android:minHeight">@dimen/height_actionbar</item>
        <item name="android:drawableLeft">@drawable/menu_arrow</item>
        <item name="android:drawablePadding">@dimen/margin_horizontal_all</item>
    </style>

    <style name="TextAppearanceInfo">
        <item name="android:textSize">@dimen/textsize_btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/bondi_blue</item>
    </style>

    <style name="TextAppearancePopupTitle">
        <item name="android:textSize">@dimen/textsize_popup_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearancePopup">
        <item name="android:textSize">@dimen/textsize_popup</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonPopupClose">
        <item name="android:textSize">@dimen/textsize_popup</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/bondi_blue</item>
        <item name="android:paddingLeft">@dimen/padding_popup_btn_close</item>
        <item name="android:paddingRight">@dimen/padding_popup_btn_close</item>
        <item name="android:minHeight">@dimen/height_popup_btn_close_min</item>
        <item name="android:drawableLeft">@drawable/main_btn_close</item>
        <item name="android:drawablePadding">@dimen/padding_popup_btn_close</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
