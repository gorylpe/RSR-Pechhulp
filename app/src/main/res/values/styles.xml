<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textSize">@dimen/buttons_text</item>
        <item name="android:textColor">@color/color_main_text</item>
        <item name="android:background">@drawable/main_btn_bg</item>
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="ActionBarTextView">
        <item name="android:textSize">@dimen/buttons_text</item>
        <item name="android:textColor">@color/color_main_text</item>
    </style>

    <style name="ActionBarButtonBack" parent="DefaultButton">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:minHeight">@dimen/actionbar_height</item>
        <item name="android:drawableLeft">@drawable/menu_arrow</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="InfoTextAppearance">
        <item name="android:textSize">@dimen/buttons_text</item>
        <item name="android:textColor">@color/color_info_text</item>
        <item name="android:textColorLink">@color/color_primary</item>
    </style>
</resources>
